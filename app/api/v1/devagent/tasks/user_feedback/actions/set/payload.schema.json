{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "User feedback",
  "description": "Payload schema of user_feedback_set API",
  "type": "object",
  "patternProperties": {
    "^.*$": {
      "description": "Task id of the review for which feedback is given",
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "description": "Feedback for devagent alarm",
        "type": "object",
        "properties": {
          "feedback": {
            "description": "User feedback for the devagent alarm",
            "type": "boolean"
          },
          "rule": {
            "description": "Name of the rule that was reported",
            "type": "string"
          },
          "file": {
            "description": "Name of the file that was reported",
            "type": "string"
          },
          "line": {
            "description": "Line number that was reported",
            "type": "number"
          }
        },
        "required": ["feedback", "rule", "file", "line"],
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
